@model StartEvent.Web.Models.Celebrite
@{
    Layout = "_Layout";
    ViewData["Title"] = Model.Nom + " - Profil";
    var photoUrl = (!string.IsNullOrWhiteSpace(Model.PhotoPath) && (Model.PhotoPath.StartsWith("http") || Model.PhotoPath.StartsWith("https")))
        ? Model.PhotoPath
        : Url.Content("~/" + (string.IsNullOrWhiteSpace(Model.PhotoPath) ? "images/logo.png" : Model.PhotoPath.TrimStart('/')));
}

<style>
    .profile-container {
        max-width: 1000px;
        margin: 100px auto;
        background: white;
        padding: 30px;
        box-shadow: 0 0 15px rgba(0,0,0,0.1);
        border-radius: 12px;
    }

    .profile-header {
        display: flex;
        gap: 30px;
        align-items: flex-start;
        margin-bottom: 30px;
        flex-wrap: wrap;
    }

    .profile-header img {
        width: 250px;
        height: 320px;
        object-fit: cover;
        border-radius: 15px;
        box-shadow: 0 0 10px rgba(0,0,0,0.2);
    }

    .profile-header h1 {
        margin-top: 0;
        font-size: 2.5em;
    }

    .profile-details h2 {
        margin-top: 30px;
        border-bottom: 2px solid #eee;
        padding-bottom: 10px;
    }

    .section {
        margin-top: 40px;
    }

    .section h2 {
        margin-bottom: 20px;
    }

    .section ul {
        list-style: disc inside;
        padding-left: 20px;
    }

    .profile-details p {
        line-height: 1.6;
        color: #333;
    }

    .profile-details p:empty::before {
        content: "Non renseigné";
        color: #999;
        font-style: italic;
    }
</style>

<main class="profile-container">
    <div class="profile-header">
        <img src="@photoUrl" alt="@Model.Nom" onerror="this.onerror=null;this.src='@Url.Content("~/images/logo.png")';">
        <div>
            <h1>@Model.Nom</h1>
            @if (!string.IsNullOrWhiteSpace(Model.Profession))
            {
                <p><strong>Profession :</strong> @Model.Profession</p>
            }
            @if (Model.DateNaissance.HasValue)
            {
                <p><strong>Date de naissance :</strong> @Model.DateNaissance.Value.ToString("dd MMMM yyyy", System.Globalization.CultureInfo.GetCultureInfo("fr-FR"))</p>
            }
            @if (!string.IsNullOrWhiteSpace(Model.LieuNaissance))
            {
                <p><strong>Lieu de naissance :</strong> @Model.LieuNaissance</p>
            }
        </div>
    </div>

    <div class="profile-details">
        <h2>Biographie</h2>
        @if (!string.IsNullOrWhiteSpace(Model.Parcours))
        {
            <p>@Model.Parcours</p>
        }
        else
        {
            <p style="color: #999; font-style: italic;">Biographie non renseignée</p>
        }

        <h2>Loisirs</h2>
        @if (!string.IsNullOrWhiteSpace(Model.Loisirs))
        {
            <p>@Model.Loisirs</p>
        }
        else
        {
            <p style="color: #999; font-style: italic;">Loisirs non renseignés</p>
        }
    </div>
</main>

