@{
    ViewData["Title"] = "Événements";
    Layout = "_Layout";
}

@section Styles {
    <style>
        .titre-rouge {
            color: red;
            font-size: 3rem;
            margin: 0;
        }

        .titre-noir {
            color: #000;
            font-size: 2.5rem;
            margin-top: 10px;
        }

        #contact {
            background-color: #f4f4f4;
            padding: 30px;
            border-radius: 8px;
        }

        .intro-section {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
            align-items: center;
            gap: 24px;
            padding: 40px 0;
        }

        .intro-image img {
            width: 100%;
            max-width: 480px;
            border-radius: 12px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.08);
        }

        .service-container {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(160px, 1fr));
            gap: 20px;
            padding: 20px 0 50px 0;
        }

        .service-item {
            text-align: center;
            background: #fff;
            border: 1px solid #eee;
            border-radius: 12px;
            padding: 16px 12px;
            box-shadow: 0 6px 14px rgba(0, 0, 0, 0.05);
            transition: transform .2s ease, box-shadow .2s ease;
        }

        .service-item:hover {
            transform: translateY(-4px);
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.08);
        }

        .service-image {
            width: 100%;
            max-width: 180px;
            height: 140px;
            object-fit: contain;
            margin-bottom: 12px;
        }

        .service-item h3 {
            margin: 0;
            color: #800000;
            font-size: 1.05rem;
        }
    </style>
}

<section class="intro-section container" style="max-width:1200px;margin:0 auto;padding:0 20px;">
    <div class="intro-text">
        <h2 class="titre-rouge">Pour ceux</h2>
        <h3 class="titre-noir">qui adorent sortir</h3>
    </div>
    <div class="intro-image">
        <img src="~/images/Dune Part Two.png" alt="Sortir" />
    </div>
</section>

<section class="image-section">
    <div class="container" style="max-width:1200px;margin:0 auto;padding:0 20px;">
        <div class="service-container">
            <div class="service-item">
                <a asp-controller="Events" asp-action="Musique">
                    <img src="~/images/musique.png" alt="Musique" class="service-image">
                    <h3>Musique</h3>
                </a>
            </div>
            <div class="service-item">
                <a asp-controller="Events" asp-action="Nocturne">
                    <img src="~/images/Vie nocturne.png" alt="Vie nocturne" class="service-image">
                    <h3>Vie nocturne</h3>
                </a>
            </div>
            <div class="service-item">
                <a asp-controller="Events" asp-action="Arts">
                    <img src="~/images/Arts du spectacle et de la scène.png" alt="Arts du spectacle et de la scène" class="service-image">
                    <h3>Arts du spectacle et de la scène</h3>
                </a>
            </div>
            <div class="service-item">
                <a asp-controller="Events" asp-action="Fetes">
                    <img src="~/images/Fêtes.png" alt="Fêtes" class="service-image">
                    <h3>Fêtes</h3>
                </a>
            </div>
            <div class="service-item">
                <a asp-controller="Events" asp-action="Loisirs">
                    <img src="~/images/Loisirs.png" alt="Loisirs" class="service-image">
                    <h3>Loisirs</h3>
                </a>
            </div>
        </div>
    </div>
</section>






