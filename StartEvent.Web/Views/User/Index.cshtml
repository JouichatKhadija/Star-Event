@model IEnumerable<StartEvent.Web.Models.Reservation>
@{
    ViewData["Title"] = "Espace utilisateur";
    Layout = "_Layout";
    var reservationsNonPayees = Model.Where(r => !r.Payee).ToList();
    var totalNonPaye = reservationsNonPayees.Sum(r => (r.Evenement?.Prix ?? 0) * r.NombrePlaces);
}

@if (TempData["PaymentSuccess"] is string successMsg)
{
    <div style="background:#e6ffed;color:#256029;border:1px solid #c0e6c7;padding:14px 16px;border-radius:10px;margin-bottom:16px;font-weight:600;">
        @successMsg
    </div>
}
@if (TempData["PaymentError"] is string errorMsg)
{
    <div style="background:#fff0f0;color:#a12626;border:1px solid #f3c3c3;padding:14px 16px;border-radius:10px;margin-bottom:16px;font-weight:600;">
        @errorMsg
    </div>
}

<style>
    .cart-summary {
        background: #f8f9fa;
        border: 2px solid #800000;
        border-radius: 12px;
        padding: 20px;
        margin-top: 24px;
    }
    .cart-summary h3 {
        margin: 0 0 16px 0;
        color: #800000;
        font-size: 1.3em;
    }
    .total-row {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 12px 0;
        font-size: 1.2em;
        font-weight: 700;
        border-top: 2px solid #ddd;
        margin-top: 12px;
    }
    .pay-btn {
        background: linear-gradient(120deg, #d80f0f, #800000);
        border: none;
        color: #fff;
        padding: 14px 28px;
        border-radius: 10px;
        font-weight: 700;
        font-size: 1.1em;
        cursor: pointer;
        transition: transform .15s ease, box-shadow .2s ease;
        box-shadow: 0 10px 20px rgba(128, 0, 0, 0.2);
        margin-top: 16px;
        width: 100%;
    }
    .pay-btn:hover {
        transform: translateY(-2px);
        box-shadow: 0 12px 24px rgba(128, 0, 0, 0.3);
    }
    .pay-btn:disabled {
        background: #ccc;
        cursor: not-allowed;
        box-shadow: none;
    }
    .tickets-btn {
        background:#0069d9;
        color:#fff;
        border:none;
        padding:10px 16px;
        border-radius:10px;
        font-weight:700;
        cursor:pointer;
        transition: transform .15s ease, box-shadow .2s ease;
        box-shadow:0 8px 16px rgba(0,105,217,0.25);
    }
    .tickets-btn:hover { transform: translateY(-2px); box-shadow:0 10px 20px rgba(0,105,217,0.35); }
    .tickets-btn:disabled { background:#ccc; cursor:not-allowed; box-shadow:none; }
</style>

<section class="container" style="max-width:1100px;margin:30px auto;padding:0 20px;">
    <header style="display:flex;justify-content:space-between;align-items:center;margin-bottom:16px;">
        <div>
            <h1 style="margin:0;color:#800000;">Mon panier</h1>
            <p style="margin:4px 0;color:#555;">Vos réservations et paiements.</p>
        </div>
        <form asp-action="Logout" asp-controller="Account" method="post">
            <button type="submit" style="background:#444;color:#fff;border:none;padding:8px 14px;border-radius:8px;">Déconnexion</button>
        </form>
    </header>

    <div style="background:#fff;border:1px solid #eee;border-radius:12px;padding:16px;box-shadow:0 8px 18px rgba(0,0,0,0.04);">
        <table class="table" style="width:100%;border-collapse:collapse;">
            <thead>
                <tr style="background:#800000;color:#fff;">
                    <th style="padding:12px;">Événement</th>
                    <th style="padding:12px;">Date</th>
                    <th style="padding:12px;">Lieu</th>
                    <th style="padding:12px;text-align:center;">Prix unitaire</th>
                    <th style="padding:12px;text-align:center;">Places</th>
                    <th style="padding:12px;text-align:center;">Total</th>
                    <th style="padding:12px;text-align:center;">Statut</th>
                    <th style="padding:12px;text-align:center;">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var r in Model)
                {
                    var prixUnitaire = r.Evenement?.Prix ?? 0;
                    var totalReservation = prixUnitaire * r.NombrePlaces;
                    <tr style="border-bottom:1px solid #eee;">
                        <td style="padding:12px;font-weight:600;">@r.Evenement?.Nom</td>
                        <td style="padding:12px;">@r.Evenement?.DateEvenement.ToString("dd/MM/yyyy HH:mm")</td>
                        <td style="padding:12px;">@r.Evenement?.Lieu</td>
                        <td style="padding:12px;text-align:center;color:#800000;font-weight:600;">@prixUnitaire.ToString("0.00") €</td>
                        <td style="padding:12px;text-align:center;">@r.NombrePlaces</td>
                        <td style="padding:12px;text-align:center;font-weight:700;color:#111;">@totalReservation.ToString("0.00") €</td>
                        <td style="padding:12px;text-align:center;">
                            @if (r.Payee)
                            {
                                <span style="color:#256029;font-weight:600;">✓ Payée</span>
                            }
                            else
                            {
                                <span style="color:#d80f0f;font-weight:600;">En attente</span>
                            }
                        </td>
                        <td style="padding:12px;text-align:center;">
                            <form asp-action="ModifierPlaces" asp-controller="User" method="post" style="display:inline-block;margin-right:6px;">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="id" value="@r.Id" />
                                <input type="number" name="places" value="@r.NombrePlaces" min="1" style="width:60px;padding:4px;" />
                                <button type="submit" style="background:#0069d9;color:#fff;border:none;padding:4px 8px;border-radius:6px;font-size:.85em;">
                                    Modifier
                                </button>
                            </form>
                            <form asp-action="Supprimer" asp-controller="User" method="post" style="display:inline-block;" onsubmit="return confirm('Supprimer cette réservation ?');">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="id" value="@r.Id" />
                                <button type="submit" style="background:#dc3545;color:#fff;border:none;padding:4px 8px;border-radius:6px;font-size:.85em;">
                                    Supprimer
                                </button>
                            </form>
                        </td>
                    </tr>
                }
                @if (!Model.Any())
                {
                    <tr>
                        <td colspan="7" style="padding:20px;text-align:center;color:#666;">
                            Aucune réservation pour le moment.
                            <a asp-controller="Evenements" asp-action="Index" style="color:#800000;">
                                Parcourir les événements
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="cart-summary">
        <h3>Récapitulatif du panier</h3>
        <div style="color:#555;margin-bottom:8px;">
            <strong>@reservationsNonPayees.Count</strong> réservation(s) en attente de paiement
        </div>
        <div class="total-row">
            <span>Total à payer :</span>
            <span style="color:#800000;font-size:1.4em;">@totalNonPaye.ToString("0.00") €</span>
        </div>
        <div style="display:flex;gap:10px;flex-wrap:wrap;">
            <form asp-action="Payer" asp-controller="User" method="post">
                @Html.AntiForgeryToken()
                <button type="submit" class="pay-btn" @(reservationsNonPayees.Any() ? "" : "disabled")>
                    <i class="fa fa-credit-card"></i> Payer et prendre mon ticket
                </button>
            </form>
            <a asp-action="Tickets" asp-controller="User" class="tickets-btn" style="text-decoration:none;padding:10px 16px;display:inline-block;">
                <i class="fa fa-ticket-alt"></i> Voir mes tickets
            </a>
        </div>
    </div>
</section>






